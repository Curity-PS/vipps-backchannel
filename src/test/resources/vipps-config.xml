<config xmlns="http://tail-f.com/ns/config/1.0">
    <profiles xmlns="https://curity.se/ns/conf/base">
        <profile>
            <id>authentication-service</id>
            <type xmlns:auth="https://curity.se/ns/conf/profile/authentication">auth:authentication-service</type>
            <settings>
                <authentication-service xmlns="https://curity.se/ns/conf/profile/authentication">
                    <authenticators>
                        <backchannel-authenticator>
                            <id>vipps</id>
                            <vipps-backchannel xmlns="https://curity.se/ns/ext-conf/vipps-backchannel">
                                <client-id>test-client-id</client-id>
                                <client-secret>test-client-secret</client-secret>
                                <openid-configuration>
                                    <http-client>
                                        <id>standard</id>
                                    </http-client>
                                    <issuer>http://host.testcontainers.internal:8888/access-management-1.0/access/</issuer>
                                </openid-configuration>
                            </vipps-backchannel>
                        </backchannel-authenticator>
                    </authenticators>
                    <protocols>
                        <protocol>
                            <id>default-simple-protocol</id>
                            <simple-api/>
                        </protocol>
                    </protocols>
                </authentication-service>
            </settings>
        </profile>
        <profile>
            <id>token-service</id>
            <type xmlns:as="https://curity.se/ns/conf/profile/oauth">as:oauth-service</type>
            <settings>
                <authorization-server xmlns="https://curity.se/ns/conf/profile/oauth">
                    <client-store>
                        <config-backed>
                            <client>
                                <id>ciba-client</id>
                                <secret>$5$.kXLiPMt8zm6QMFV$La3CZb7Tj1UPGtNyjcAgqMyEm6of6/NlQD3/b5M8hT7</secret>
                                <scope>openid</scope>
                                <user-authentication>
                                </user-authentication>
                                <capabilities>
                                    <backchannel-authentication/>
                                    <introspection/>
                                </capabilities>
                            </client>
                        </config-backed>
                    </client-store>
                </authorization-server>
            </settings>
        </profile>
    </profiles>
</config>